@page "{id:int?}"
@model RPInventories.Pages.Departments.DetailsModel

@{
    ViewData["Title"] = "Department Details";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.CreatedAt)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col">
        <partial name="Partials/Actions/_Details" model="@Model.Department.Id"/>
    </div>
</div>

@page
@model RPInventories.Pages.Brands.IndexModel

@{
    ViewData["Title"] = "Brands";
}

<h1>@ViewData["Title"]</h1>
<p class="text-end">
    @Model.Brands.Count registers
</p>
<p class="mt-3">
    <a class="btn btn-primary" asp-page="Create">
        <i class="fa-solid fa-plus"></i>&nbsp;Create Brand
    </a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].Name)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brands) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-center">
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                    <i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit
                </a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">
                    <i class="fa-solid fa-rectangle-list"></i>&nbsp;Details
                </a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fa-solid fa-rectangle-list"></i>&nbsp;Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

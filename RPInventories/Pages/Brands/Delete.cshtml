@{
    ViewData["Title"] = "Want to remove the brand "+Model.Brand.Name+"?";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Brand.Id" />
